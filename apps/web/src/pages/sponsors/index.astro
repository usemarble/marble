---
import Container from "@/components/Container.astro";
import Neon from "@/components/icons/sponsors/Neon.astro";
import Upstash from "@/components/icons/sponsors/Upstash.astro";
import Layout from "@/layouts/Layout.astro";
import { SITE } from "@/lib/constants";
---

<Layout 
  title={`Our Sponsors & Supporters - ${SITE.TITLE}`} 
  description="Meet the amazing companies and individuals that support the development of Marble."
>
  <div class="divide-y divide-dashed">
    <section class="border-t border-dashed">
      <div class="lg:border-x border-dashed md:w-[calc(100%-140px)] mx-auto">
        <Container class="space-y-10 lg:space-y-16 pt-12 pb-20 lg:py-24">
          <div class="relative flex flex-col items-center space-y-6 text-center">
            <h1 class="relative text-2xl sm:text-3xl md:text-4xl max-w-[25ch] mx-auto">
              Our Sponsors & Supporters
            </h1>
            <p class="mx-auto max-w-[60ch] md:text-lg text-muted-foreground">
              We're grateful to the amazing companies and organizations that support the development of Marble and help us build better content management tools for everyone.
            </p>
          </div>

          <div class="grid gap-8 md:gap-10 grid-cols-1 md:grid-cols-2 max-w-4xl mx-auto">
            <div class="border bg-gray-50/80 backdrop-blur-md p-1 rounded-xl min-h-64">
              <div class="border flex flex-col justify-between rounded-[8px] bg-white h-full w-full p-8 text-center">
                <div class="space-y-6">
                  <div class="flex items-center justify-center">
                    <a 
                      href="https://upstash.com?utm_source=marble"
                      target="_blank" 
                      rel="noopener noreferrer"
                      class="flex items-center gap-3 group hover:scale-105 transition-transform duration-200"
                    >
                      <Upstash class="h-8 w-8" />
                      <span class="text-2xl font-medium text-gray-900 group-hover:text-primary-background/70 transition-colors">Upstash</span>
                    </a>
                  </div>
                  <p class="text-muted-foreground text-sm lg:text-base leading-relaxed">
                    Powers our caching, webhooks and rate limiting infrastructure
                  </p>
                </div>
                <div class="pt-6 border-t border-dashed">
                  <a
                    href="https://upstash.com?utm_source=marble"
                    target="_blank" 
                    rel="noopener noreferrer"
                    class="inline-flex items-center text-sm text-primary-background/70 font-medium hover:underline transition-all duration-300 ease-in-out"
                  >
                    Learn more about Upstash
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="w-4 h-4 ml-1">
                      <title>External link</title>
                      <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 6H5.25A2.25 2.25 0 0 0 3 8.25v10.5A2.25 2.25 0 0 0 5.25 21h10.5A2.25 2.25 0 0 0 18 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25" />
                    </svg>
                  </a>
                </div>
              </div>
            </div>

            <div class="border bg-gray-50/80 backdrop-blur-md p-1 rounded-xl min-h-64">
              <div class="border flex flex-col justify-between rounded-[8px] bg-white h-full w-full p-8 text-center">
                <div class="space-y-6">
                  <div class="flex items-center justify-center">
                    <a 
                      href="https://neon.com?utm_source=marble"
                      target="_blank" 
                      rel="noopener noreferrer"
                      class="flex items-center gap-3 group hover:scale-105 transition-transform duration-200"
                    >
                      <Neon class="h-8 w-8" />
                      <span class="text-2xl font-medium text-gray-900 group-hover:text-primary-background/70 transition-colors">Neon</span>
                    </a>
                  </div>
                  <p class="text-muted-foreground text-sm lg:text-base leading-relaxed">
                    Powers our entire database, literally
                  </p>
                </div>
                <div class="pt-6 border-t border-dashed">
                  <a
                    href="https://neon.com?utm_source=marble"
                    target="_blank" 
                    rel="noopener noreferrer"
                    class="inline-flex items-center text-sm text-primary-background/70 font-medium hover:underline transition-all duration-300 ease-in-out"
                  >
                    Learn more about Neon
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="w-4 h-4 ml-1">
                      <title>External link</title>
                      <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 6H5.25A2.25 2.25 0 0 0 3 8.25v10.5A2.25 2.25 0 0 0 5.25 21h10.5A2.25 2.25 0 0 0 18 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25" />
                    </svg>
                  </a>
                </div>
              </div>
            </div>
          </div>

          <div class="max-w-2xl mx-auto text-center space-y-4">
            <h2 class="text-xl md:text-2xl font-medium">Want to support Marble?</h2>
            <p class="text-muted-foreground">
              If your brand would like to support our project, feel free to reach out to us on <a href="https://twitter.com/usemarblecms" target="_blank" rel="noopener noreferrer" class="text-primary hover:text-primary-dark transition-colors">Twitter</a>! 
            </p>
          </div>
        </Container>
      </div>
    </section>
  </div>
</Layout>
