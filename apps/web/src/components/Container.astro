---
import type { HTMLAttributes } from "astro/types";
import { cn } from "@/lib/utils";

interface Props extends HTMLAttributes<"div"> {}
const { class: classNames, ...attrs } = Astro.props;
---
<div
  {...attrs}
  class={cn("h-full mx-auto w-full max-w-6xl px-6 sm:px-8 md:px-12 lg:px-16", classNames)}
>
  <slot/>
</div>
